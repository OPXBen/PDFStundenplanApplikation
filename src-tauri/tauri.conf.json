{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDF-Splitter",
  "version": "0.1.0",
  "identifier": "ch.jgh.pdfsplitter",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PDF-Splitter",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "deb", "nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
    "webviewInstallMode": {
      "type": "offlineInstaller"
    }
  }
  }
}

